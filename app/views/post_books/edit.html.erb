<div class="edit-container">
	<p class="h1 font-weight-bold text-center my-5 text-secondary"><i class="fa fa-edit mr-1"></i>Editing Book</p>
	<div class="form-group text-center">
		<%= form_for(@post_book) do |f| %>

		<label for="form-title">Title</label>
		<%= f.text_field :title, class: "form-control mb-2", id: "form-title", placeholder: "本のタイトル" %>

		<label for="form-body">Body</label>
		<%= f.text_area :body, class: "form-control", id: "form-body", placeholder: "ここに本文を入れてください", rows:"7" %>

		<%= f.submit 'Book Update', class: "mt-3 btn btn-primary" %>

		<% end %>
	</div>
</div>