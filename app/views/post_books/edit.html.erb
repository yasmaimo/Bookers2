<div class="container">
	<div class="row">
		<div class="col-3">
			
		</div>
		<div class="col-6">
			<% if @post_book.errors.any? %>
				<div class="alert alert-danger mt-4">
					<h2><%= pluralize(@post_book.errors.count, "件のエラー") %></h2>
					<ul>
					<% @post_book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
					</ul>
				</div>
			<% end %>

			<p class="h1 font-weight-bold text-center my-5 text-secondary"><i class="fa fa-edit mr-1"></i>Editing Book</p>
			<div class="form-group text-center">
				<%= form_for(@post_book) do |f| %>

				<label for="form-title">Title</label>
				<%= f.text_field :title, class: "form-control mb-2", id: "form-title", placeholder: "本のタイトル*20文字まで" %>

				<label for="form-body">Body</label>
				<%= f.text_area :body, class: "form-control", id: "form-body", placeholder: "ここに本文を入れてください*200文字まで", rows:"7" %>

				<%= f.submit 'Book Update', class: "mt-3 btn btn-primary" %>

				<% end %>
			</div>
		</div>
		<div class="col-3">

		</div>
	</div>
</div>