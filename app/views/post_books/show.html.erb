<div class="container mw-100">
	<div class="row">
		<%= render 'list/list', {post: @post, user: @post_book.user} %>
		<div class="mb-4 pr-4 col-9">
			<p class="h2 col-9 text-center text-secondary">Book detail</p>
			<table class="table table-hover book-table">
				<tbody>
					<tr class="small">
						<td class="columm-1 text-center">
							<%= attachment_image_tag @post_book.user, :profile_image, fallback: "no_image.jpg",:size =>'100x100' %>
							<p class=" mt-3 font-weight-bold">
							<%= @post_book.user.name %>
							</p>
						</td>
						<td class="columm-2">
							<p><%= @post_book.title %></p>
							<p><%= @post_book.body %></p>
						</td>
						<td class="columm-3">
							<%= @post_book.created_at.strftime('%Y/%m/%d') %>
							<p class="mt-5 text-center">
							<% if @post_book.user.id == current_user.id %>
								<%= link_to "Edit", edit_post_book_path(@post_book), class: "btn btn-outline-primary btn-sm" %>
								<%= link_to "Destroy", post_book_path(@post_book), method: :delete, "data-confirm" => "Are you sure?", class: "btn btn-outline-danger btn-sm" %>
							<% end %>
							</p>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>