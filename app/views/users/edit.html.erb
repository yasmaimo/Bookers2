<div class="edit-container">
	<% if @user.errors.any? %>
		<div class="alert alert-danger mt-4">
			<h2><%= pluralize(@user.errors.count, "error") %></h2>
			<ul>
			<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
	<% end %>
			</ul>
		</div>
	<% end %>

	<p class="h1 font-weight-bold text-center my-5 text-secondary">Editing Profile</p>
	<div class="form-group text-center">
		<%= attachment_image_tag @user, :profile_image, :fill, 300, 300, format: 'jpeg', fallback: "no_image.jpg" %>

		<%= form_for(@user) do |f| %>

		<p><label>Profile image</label></p>
		<p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "btn btn-secondary" %></p>

		<label for="form-title">Name</label>
		<%= f.text_field :name, class: "form-control mb-2", id: "form-title", placeholder: "ユーザー名" %>

		<label for="form-body">Introduction</label>
		<%= f.text_area :introduction, class: "form-control", id: "form-body", placeholder: "ここに自己紹介を入れてください *50文字まで", rows:"2" %>

		<%= f.submit 'Profile Update', class: "mt-3 btn btn-primary" %>

		<% end %>
	</div>
</div>