<div style="height: 60px;">
	<p class="flash-message text-danger"><%= flash[:destroyed] %></p>
</div>

<div class="container mw-100">
	<div class="row">
		<% if @user.id == current_user.id %>
			<%= render 'list/list', {post: @post, user: current_user} %>
		<% else %>
			<%= render 'list/list', {post: @post, user: @user} %>
		<% end %>

		<div class="mb-4 pr-4 col-9">
			<p class="h2 col-9 text-center text-secondary">Books</p>
			<table class="table table-hover book-table">
				<thead>
					<tr class="bg-info text-white">
						<th class="columm-1">title</th>
						<th class="columm-2">body</th>
						<th class="columm-3">date</th>
					</tr>
				</thead>

				<% @post_books.each do |post_book| %>
				<tbody>
					<tr class="small">
						<td class="text-truncate columm-1"><%= post_book.title %></td>
						<td class="text-truncate columm-2"><%= post_book.body %></td>
						<td class="text-truncate columm-3"><%= post_book.created_at.strftime('%Y/%m/%d') %></td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>